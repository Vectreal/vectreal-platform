{
	"extends": ["plugin:@nx/react", "../../.eslintrc"],
	"ignorePatterns": ["!**/*", "storybook-static", ".react-router", "build"],
	"overrides": [
		{
			"files": ["*.json"],
			"parser": "jsonc-eslint-parser",
			"rules": {
				"@nx/dependency-checks": [
					"error",
					{
						"includeTransitiveDependencies": false,
						"ignoredDependencies": [
							// "@shared/components/utils",
							// "@shared/components/ui",
							// "@vctrl/utils",
							// "@vctrl/ui"
						]
					}
				]
			}
		},
		{
			"files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
			"rules": {
				"@nx/enforce-module-boundaries": [
					1,
					{
						"enforceBuildableLibDependency": false
					}
				]
			}
		},
		{
			"files": ["*.ts", "*.tsx"],
			"rules": {}
		},
		{
			"files": ["*.js", "*.jsx"],
			"rules": {}
		}
	]
}
