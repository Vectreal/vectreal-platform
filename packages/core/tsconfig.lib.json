{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"declaration": true,
		"types": ["node"],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"exclude": [
		"jest.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.ts",
		"**/*.stories.ts"
	],
	"include": ["src/**/*.ts"]
}
