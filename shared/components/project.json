{
	"name": "shared/components",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "shared/components/src",
	"projectType": "library",
	"tags": [],
	"targets": {
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"fix": true,
				"lintFilePatterns": [
					"shared/components/**/*.{ts,tsx,js,jsx}",
					"shared/components/package.json"
				]
			}
		},
		"typecheck": {
			"executor": "nx:run-commands",
			"outputs": [],
			"options": {
				"command": "tsc --noEmit -p shared/components/tsconfig.json"
			}
		},
		"build": {
			"executor": "@nx/vite:build",
			"outputs": ["{options.outputPath}"],
			"defaultConfiguration": "production",
			"options": {
				"outputPath": "build/shared/components",
				"configFile": "shared/components/vite.config.ts"
			},
			"configurations": {
				"development": {
					"mode": "development"
				},
				"production": {
					"mode": "production"
				}
			}
		}
	}
}
