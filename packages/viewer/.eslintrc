{
	"extends": ["plugin:@nx/react", "../../.eslintrc"],
	"ignorePatterns": ["!**/*", ".storybook", "storybook-static"],
	"overrides": [
		{
			"files": ["*.json"],
			"parser": "jsonc-eslint-parser",
			"rules": {
				"@nx/dependency-checks": [
					"error",
					{
						"includeTransitiveDependencies": false,
						"ignoredFiles": [
							"packages/viewer/.storybook/*",
							"packages/viewer/src/vectreal-viewer.stories.tsx",
							"packages/viewer/vite.config.ts"
						], // list of files that should be skipped for check
						"ignoredDependencies": ["@shared/*"]
					}
				]
			}
		},
		{
			"files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
			"rules": {
				"@nx/enforce-module-boundaries": [
					1,
					{
						"enforceBuildableLibDependency": false
					}
				]
			}
		},
		{
			"files": ["*.ts", "*.tsx"],
			"rules": {}
		},
		{
			"files": ["*.js", "*.jsx"],
			"rules": {}
		}
	]
}
